{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "orderable-rc-{{TAG}}",
    "labels": {
      "app": "orderable",
      "env": "{{NAMESPACE}}"
    }
  },
  "spec": {
    "replicas": {{REPLICAS}},
    "template": {
      "metadata": {
        "labels": {
          "app": "orderable",
          "env": "{{NAMESPACE}}",
          "deployment": "{{DEPLOYMENT_ID}}"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "ssl-certs",
            "secret": {
              "secretName": "starorderableco"
            }
          }
        ],
        "containers": [
          {
            "name": "website",
            "image": "{{QUALIFIED_IMAGE_NAME}}",
            "env": [],
            "ports": [
              {
                "containerPort": 443
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/etc/nginx/ssl",
                "name": "ssl-certs"
              }
            ]
          }
        ]
      }
    }
  }
}
